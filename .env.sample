# n8n Configuration
N8N_BASIC_AUTH_ACTIVE=true
N8N_BASIC_AUTH_USER=admin
N8N_BASIC_AUTH_PASSWORD=change_this_secure_password
N8N_HOST=localhost
N8N_PORT=5678
N8N_PROTOCOL=http

# Database (SQLite by default, can use PostgreSQL for production)
DB_TYPE=sqlite

# Google Drive API Configuration
GOOGLE_CLIENT_ID=your_google_oauth_client_id_here
GOOGLE_CLIENT_SECRET=your_google_oauth_client_secret_here
GOOGLE_REDIRECT_URI=http://localhost:5678/rest/oauth2-credential/callback

# Twilio WhatsApp Configuration
TWILIO_ACCOUNT_SID=your_twilio_account_sid_here
TWILIO_AUTH_TOKEN=your_twilio_auth_token_here
TWILIO_WHATSAPP_NUMBER=whatsapp:+14155238886
TWILIO_WEBHOOK_URL=https://your-domain.com/webhook/whatsapp

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4o
OPENAI_MAX_TOKENS=1000

# Security
WEBHOOK_SECRET=your_random_webhook_secret_here
JWT_SECRET=your_jwt_secret_for_session_management

# Audit Logging (Google Sheets)
AUDIT_SPREADSHEET_ID=your_google_sheets_id_for_audit_log

# Application Settings
APP_NAME=WhatsApp Drive Assistant
APP_VERSION=1.0.0
LOG_LEVEL=info

# Safety Settings
REQUIRE_DELETE_CONFIRMATION=true
MAX_FILES_PER_OPERATION=50
ALLOWED_FILE_TYPES=pdf,docx,txt,doc,xlsx,xls,pptx,ppt

# Rate Limiting
MAX_REQUESTS_PER_MINUTE=10
MAX_REQUESTS_PER_HOUR=100

# Webhook Security
VERIFY_TWILIO_SIGNATURE=true

# Development Settings (set to false in production)
DEBUG_MODE=false
ENABLE_WEBHOOK_LOGS=true