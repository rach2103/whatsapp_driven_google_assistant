# =============================================================================
# WhatsApp-Driven Google Drive Assistant - Environment Configuration
# =============================================================================

# =============================================================================
# n8n Configuration
# =============================================================================
N8N_PASSWORD=your_secure_password_here
WEBHOOK_URL=https://your-domain.com
N8N_HOST=your-domain.com
N8N_PROTOCOL=https
N8N_ENCRYPTION_KEY=your-32-character-encryption-key-here

# =============================================================================
# Twilio WhatsApp Configuration
# =============================================================================
# Get these from your Twilio Console: https://console.twilio.com/
TWILIO_ACCOUNT_SID=your_twilio_account_sid_here
TWILIO_AUTH_TOKEN=your_twilio_auth_token_here
TWILIO_PHONE_NUMBER=whatsapp:+14155238886

# =============================================================================
# Google Cloud Configuration
# =============================================================================
# Create OAuth 2.0 credentials in Google Cloud Console
# APIs & Services > Credentials > Create Credentials > OAuth 2.0 Client ID
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here
GOOGLE_REDIRECT_URI=https://your-domain.com/callback

# =============================================================================
# OpenAI Configuration
# =============================================================================
# Get your API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here

# =============================================================================
# Security Configuration
# =============================================================================
# Keyword required for destructive operations (DELETE command)
CONFIRMATION_KEYWORD=CONFIRM

# =============================================================================
# Audit Logging
# =============================================================================
# Google Sheets ID for audit logging (optional)
# Create a Google Sheet and copy the ID from the URL
AUDIT_SPREADSHEET_ID=your_google_sheet_id_here

# =============================================================================
# Optional: Production Settings
# =============================================================================
# Set to true for production deployments
N8N_SECURE_COOKIE=false

# =============================================================================
# Optional: Performance Tuning
# =============================================================================
# Log level: error, warn, info, debug
N8N_LOG_LEVEL=info

# =============================================================================
# Optional: Custom Webhook Path
# =============================================================================
# Custom webhook path for Twilio (default: twilio-whatsapp)
CUSTOM_WEBHOOK_PATH=twilio-whatsapp

# =============================================================================
# Optional: Rate Limiting
# =============================================================================
# Maximum requests per minute per user
RATE_LIMIT_PER_MINUTE=60

# =============================================================================
# Optional: File Size Limits
# =============================================================================
# Maximum file size for AI summarization (in bytes)
MAX_FILE_SIZE_FOR_SUMMARY=10485760  # 10MB

# =============================================================================
# Optional: Supported File Types for AI Summary
# =============================================================================
# Comma-separated list of MIME types
SUPPORTED_SUMMARY_TYPES=application/pdf,application/vnd.openxmlformats-officedocument.wordprocessingml.document,text/plain

# =============================================================================
# Optional: Error Notification
# =============================================================================
# Email for error notifications (optional)
ERROR_NOTIFICATION_EMAIL=admin@your-domain.com

# =============================================================================
# Optional: Backup Configuration
# =============================================================================
# Enable automatic workflow backups
ENABLE_BACKUP=true
BACKUP_RETENTION_DAYS=30 